
i.status {
  font-weight bold
  background #aaa
  color #fff
  font-style normal
  font-size 12px
  letter-spacing 0.4px
  display inline-block
  padding 2px 4px
  border-radius 3px
}

a.uri {
  font-size 12px
  display block
  width 60px
  overflow hidden
  text-overflow ellipsis
}

stamps-list {
  display block

  .groups-list, .stamps-list {
    overflow-x: auto;
    position relative
    margin:40px 0 40px 0;
    background #fff;
    padding:20px 20px 30px 20px;
    border-radius 10px

    table {
      border-collapse collapse
      width 100%
      caption {
        text-align left
        font-weight 200
        font-size 22px
        padding 0px 0 20px 12px
      }
      th {
        text-transform uppercase
        font-weight 200
        font-size 12px
      }
      th,td {
        text-align left
        padding:10px 15px;
        vertical-align top
      }
      td.empty {
        text-align center
        padding 50px 30px
      }

      tbody tr.item:hover td {
        background rgba(138, 194, 255, 0.1)
      }

      tfoot th {
        text-align right
      }
    }
  }

  a.add {
    position absolute
    top 20px
    right 20px
    display: inline-block
    border:none; outline:none;
    text-decoration none
    color: #fff;
    cursor: pointer;
    border-radius: 5px;
    background: #f89c36;
    letter-spacing: -.24px;
    text-transform: uppercase
    font-size: 12px;
    font-weight: 500;
    font-style: normal;
    padding:7px 12px;
    &:hover {
      opacity: 0.95;
    }
    push-btn()
  }
}

