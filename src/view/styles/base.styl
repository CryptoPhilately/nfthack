bgcolor = #e6f5ff

html, body {
  background: bgcolor
  font-family: sans-serif
  height: 100%;
  width: 100%;
  padding: 0;
  margin: 0;

  & * {
    user-select none
    box-sizing border-box
  }
}

a {
  tap-highlight-color: rgba(255, 255, 255, 0);
  -webkit-tap-highlight-color: rgba(255, 255, 255, 0);
}


push-btn() {
  transition:all 0.1s linear;
  &:active {
    transform: scale(0.97);
  }
}
