

body.loading::after {
  content: 'Loading...';
  z-index 999
  position:absolute;
  top:0; left:0; bottom:0; right:0
  display:flex;
  align-items: center;
  justify-content: center;

  font-size: 21px; text-transform: uppercase;
  font-weight: 200;
  letter-spacing: 1px;
  color: #333;
  background: rgba(230, 245, 255, 0.7);
  backdrop-filter:grayscale(1);

  animation: pulse_animation 400ms linear infinite;
}

@keyframes pulse_animation {
  0% 	 { color: #333; }
  50%  { color: rgba(0,0,0,0.1); }
  100% { color: #333; }
}
