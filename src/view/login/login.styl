log-in {
  position: absolute; top:5px; right:0;
  @media (max-width: 920px){
    right:10px;
  }

  button {
    border none; outline: none;
    background: #fff;
    color: #000;
    cursor: pointer;
    border-radius: 5px;

    font-size: 14px;
    font-weight: 500;
    font-style: normal;
    &:hover {
      opacity: 0.95;
    }
    push-btn()

    border 0.5px solid #ddd
    padding:6px 12px 7px 36px;
    background:url('assets/img/metamask.svg') no-repeat 10px center;
    background-size:16px
  }

  .userblock {
    position relative
    padding 10px 15px 10px 15px

    .address {
      color #000
      display inline-block
      overflow hidden
      text-overflow ellipsis
      max-width 150px
      font-size 14px
      text-decoration none
      &:hover {
        text-decoration underline
      }
    }
  }
}
