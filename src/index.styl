@import '/src/view/styles/base.styl'
@import '/src/view/styles/layout.styl'
@import '/src/view/styles/loader.styl'
@import '/src/view/login/login.styl'
@import '/src/view/welcome/welcome.styl'


headerHeight = 60px

body { padding-top: headerHeight }
header {
  height: headerHeight;
  position: fixed; z-index: 5; top:0; width:100%;
  .content { position: relative;}

  background-color #e6f5ff77
  backdrop-filter: blur(10px) saturate(200%);
  -webkit-backdrop-filter: blur(10px) saturate(200%);

  padding 10px 0
  a.logo {
    push-btn()
    display: inline-block
    text-decoration none

    img {
      float left
      width 40px;
      margin 0 5px 0 5px
    }

    line-height 40px
    font-size 18px

    color: #000
    font-weight 200
    strong {
      font-weight 800
      font-size 19px
      letter-spacing -3px
      color: #656bc5;
    }
    &:hover {
      filter:saturate(2)
    }
    @media (max-width: 620px){
      span { display:none; }
    }
  }
}


footer {
  padding 20px 0
  font-size 14px
  color #aaa
  a {
    color: #666
  }
}
